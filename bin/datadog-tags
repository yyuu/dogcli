#!/usr/bin/env bash
set -e

unset arg_host_id

arguments=()
for arg; do
  case "${arg}" in
  "--by-source="* )
    arguments=("${arguments[@]}" "-d" "by_source=${arg#--by-source=}")
  ;;
  "--source="* )
    arguments=("${arguments[@]}" "-d" "source=${arg#--source=}")
  ;;
  * )
    arg_host_id="${arg}"
    ;;
  esac
done

if [ -z "${arg_host_id}" ]; then
  curl -G -f "https://app.datadoghq.com/api/v1/tags/hosts" -d "api_key=${DATADOG_API_KEY}" -d "application_key=${DATADOG_APPLICATION_KEY}" "${arguments[@]}"
else
  curl -G -f "https://app.datadoghq.com/api/v1/tags/hosts/${arg_host_id}" -d "api_key=${DATADOG_API_KEY}" -d "application_key=${DATADOG_APPLICATION_KEY}" "${arguments[@]}"
fi
echo

#!/usr/bin/env bash
set -e

unset host_id

arguments=()
for arg; do
  case "$1" in
  "--by-source="* )
    arguments=("${arguments[@]}" "-d" "by_source=${1#--by-source=}")
  ;;
  "--source="* )
    arguments=("${arguments[@]}" "-d" "source=${1#--source=}")
  ;;
  * )
    host_id="$1"
    ;;
  esac
done

if [ -z "${host_id}" ]; then
  curl -G -f "https://app.datadoghq.com/api/v1/tags/hosts" -d "api_key=${DATADOG_API_KEY}" -d "application_key=${DATADOG_APPLICATION_KEY}" "${arguments[@]}"
else
  curl -G -f "https://app.datadoghq.com/api/v1/tags/hosts/${host_id}" -d "api_key=${DATADOG_API_KEY}" -d "application_key=${DATADOG_APPLICATION_KEY}" "${arguments[@]}"
fi
echo

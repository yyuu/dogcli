#!/usr/bin/env bash
set -e

arguments=()
for arg; do
  case "${arg}" in
  * )
    arguments=("${arguments[@]}" "-d" "q=${arg}")
    ;;
  esac
done

curl -G -f "https://app.datadoghq.com/api/v1/search" -d "api_key=${DATADOG_API_KEY}" -d "application_key=${DATADOG_APPLICATION_KEY}" "${arguments[@]}"
echo
